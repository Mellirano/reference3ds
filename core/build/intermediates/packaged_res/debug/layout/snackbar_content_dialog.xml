<?xml version="1.0" encoding="utf-8"?>
<view xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    class="ua.privatbank.core.snackbar.SnackbarViewDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/core_snackbarBackgroundColor_attr"
    android:gravity="center"
    android:minHeight="@dimen/snackbar_min_height"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/p24_margin_none"
    android:paddingLeft="@dimen/p24_margin_normal"
    android:paddingRight="@dimen/p24_margin_normal"
    android:paddingTop="@dimen/p24_margin_normal">

    <ImageView
        android:id="@+id/ivLeftIcon"
        android:layout_width="@dimen/snackbar_left_icon_size"
        android:layout_height="@dimen/snackbar_left_icon_size"
        android:layout_gravity="start|top"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_close_black_24dp_core"
        tools:background="#000000"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left|start"
            android:layout_marginLeft="@dimen/p24_margin_normal"
            android:layout_marginStart="@dimen/p24_margin_normal"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            android:textColor="?attr/core_snackbarTextColor_attr"
            android:textSize="@dimen/p24_textSize_normal"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="Sed ut perspiciatis" />

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left|start"
            android:layout_marginLeft="@dimen/p24_margin_normal"
            android:layout_marginStart="@dimen/p24_margin_normal"
            android:layout_marginTop="@dimen/p24_margin_small"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            android:textColor="?attr/core_snackbarTextColor_attr"
            android:textSize="@dimen/p24_textSize_small"
            tools:text="If you have been reading the overrides documentation page but you are not confident jumping in, here are examples of how you can change the look of a Snackbar." />

        <Space
            android:visibility="gone"
            android:id="@+id/viewBottomTextSpace"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/p24_margin_normal"/>

        <Button
            android:id="@+id/bAction"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right|end"
            android:minWidth="@dimen/min_width_snackbar_button"
            android:textColor="?attr/colorAccent"
            android:visibility="gone"
            tools:text="Button text"
            tools:visibility="visible" />

    </LinearLayout>


</view>