<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/toolbarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/btnCancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="Cancel"
            android:textColor="@color/textColor" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarContainer">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llImagesBlock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    android:paddingTop="16dp">

                    <ImageView
                        android:id="@+id/imgBank"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:maxHeight="52dp" />

                    <ImageView
                        android:id="@+id/imgPaymentSystem"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:maxHeight="52dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/textColor"
                    android:textSize="20sp"
                    tools:text="Parchese Authentiphication" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <FrameLayout
                       android:id="@+id/vError"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingTop="16dp"
                       android:layout_marginStart="16dp"
                       android:visibility="gone">
                   <androidx.appcompat.widget.AppCompatImageView
                       android:layout_width="28dp"
                       android:layout_height="28dp"
                       app:srcCompat="@drawable/ic_info_outline"/>
                   </FrameLayout>
                <TextView
                    android:id="@+id/tvChalengeInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:drawablePadding="8dp"
                    android:textColor="@color/textColor"
                    android:textSize="16dp"
                    tools:text="Figure 4.8 provides a sample format for a one-time passcode (OTP)/Text during a Payment
Authentication transaction. This sample UI provides a format using expandable fields for
additional information. \n \n  UI elements exceptions are depicted in the figures as “Label Managed by the 3DS
Requestor” and the functionality of these items are managed by the 3DS SDK." />
               </LinearLayout>

                <FrameLayout
                    android:id="@+id/mainContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0"
                    android:text="Submit"
                    android:padding="6dp"
                    style="@style/Widget.MaterialComponents.Button"
                    android:textAllCaps="false"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="18sp"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:backgroundTint="@color/p24ColorPrimary"
                    app:cornerRadius="6dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnResent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0"
                    android:text="Resent code"
                    android:padding="4dp"
                    android:textAllCaps="false"
                    android:textColor="@color/p24ColorPrimary"
                    android:textSize="18sp"
                    android:visibility="gone"
                    style="@style/Widget.MaterialComponents.Button"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:backgroundTint="@android:color/white"
                    app:cornerRadius="6dp" />

                <LinearLayout
                    android:id="@+id/llExtraInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ua.privatbank.threeds2.impl.ui.RadioView
                        android:id="@+id/cvWhiteList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="16dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginTop="0dp"
                        />

                    <ua.privatbank.threeds2.impl.ui.InfoBoxView
                        android:id="@+id/cvWhy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ua.privatbank.threeds2.impl.ui.InfoBoxView
                        android:id="@+id/cvExpandInfoLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="14dp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/toolbarContainer"
        android:background="@drawable/shadow_divider" />
</RelativeLayout>