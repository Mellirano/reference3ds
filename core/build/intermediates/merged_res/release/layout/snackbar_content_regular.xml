<?xml version="1.0" encoding="utf-8"?>
<view xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    class="ua.privatbank.core.snackbar.SnackbarViewRegular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/core_snackbarBackgroundColor_attr"
    android:gravity="center"
    android:minHeight="@dimen/snackbar_min_height"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/p24_margin_normal"
    android:paddingRight="@dimen/p24_margin_normal">

    <LinearLayout
        android:id="@+id/llTextContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLeftIcon"
            android:layout_width="@dimen/snackbar_left_icon_size"
            android:layout_height="@dimen/snackbar_left_icon_size"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_info"
            tools:background="#4400ff"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left|start"
            android:layout_weight="1"
            android:ellipsize="end"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textAlignment="viewStart"
            android:textColor="?attr/core_snackbarTextColor_attr"
            android:textSize="@dimen/p24_textSize_small"
            tools:text="Sed ut " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bAction"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right|end"
            android:minWidth="@dimen/min_width_snackbar_button"
            android:textColor="?attr/colorAccent"
            android:visibility="gone"
            tools:text="Button text"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/ibAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right|end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_close_white_24dp_core"
            tools:visibility="visible" />

    </LinearLayout>


</view>